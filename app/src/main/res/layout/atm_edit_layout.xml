<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/topPanel">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:onClick="goBack"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:text="@string/save"
            android:onClick="saveData"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/line"
        android:layout_below="@+id/topPanel"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:inputType="text"
        android:textSize="25dp"
        android:hint="Bank Name"
        android:id="@+id/bankName"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bankName"
        android:inputType="text"
        android:textSize="25dp"
        android:hint="Location"
        android:id="@+id/location"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:id="@+id/statusLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Status"
        android:id="@+id/status"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
        <Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/statusSwitch"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusLayout"
        android:inputType="text"
        android:textSize="25dp"
        android:text="Facilities :"
        android:id="@+id/facilities"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/depositeLayout"
        android:layout_below="@+id/facilities"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="23dp"
        android:text="Deposite Machine"
        android:id="@+id/depositeMachine"
        android:paddingTop="25dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/depositeCheck"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/depositeLayout"
        android:id="@+id/lockerLayout"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="23dp"
            android:text="Locker"
            android:id="@+id/locker"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/lockerCheck"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>